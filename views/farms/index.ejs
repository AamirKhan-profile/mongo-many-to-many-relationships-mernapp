<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Farms</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">All Farms <a href="/farm/new" style="marginleft:10px; font-size:15px; text-decoration:none;">Add New</a></h2>
        <div class="card shadow-sm">
            <div class="card-body">
                <% if (farms && farms.length > 0) { %>
                    <ul class="list-group">
                        <% farms.forEach(farm => { %>
                            <li class="list-group-item">
                                <a href="thisfarm/<%= farm._id %>"><strong><%= farm.name %></strong></a>  
                                <span class="text-muted"> - <%= farm.city %></span>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-muted">No farms found.</p>
                <% } %>

            </div>
        </div>
    </div>

</body>
</html>
